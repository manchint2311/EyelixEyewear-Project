@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css">
}

<!-- Hero Section -->
<section class="about-hero">
    <div class="hero-content">
        <h1>Our Story</h1>
        <p class="hero-subtitle">Sustainable Eyewear for a Better Tomorrow</p>
    </div>
    <div class="hero-image">
        <img src="~/images/about/hero-about.jpg" alt="Eyelix Eyewear Story">
    </div>
</section>

<!-- Mission Section -->
<section class="mission-section">
    <div class="container">
        <div class="section-header">
            <span class="label">OUR MISSION</span>
            <h2>Creating Eyewear That Doesn't Cost the Earth</h2>
        </div>

        <div class="mission-content">
            <div class="mission-text">
                <p>
                    Founded in 2020, Eyelix Eyewear was born from a simple belief:
                    style and sustainability shouldn't be mutually exclusive. We set out
                    to create eyewear that not only looks good but does good for our planet.
                </p>
                <p>
                    Every pair of Eyelix glasses is crafted from eco-friendly materials,
                    including recycled acetate, bio-based plastics, and reclaimed metals.
                    We're committed to reducing waste, minimizing our carbon footprint,
                    and supporting ethical manufacturing practices.
                </p>
            </div>
            <div class="mission-image">
                <img src="~/images/about/mission.jpg" alt="Our Mission">
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="values-section">
    <div class="container">
        <div class="section-header">
            <span class="label">OUR VALUES</span>
            <h2>What We Stand For</h2>
        </div>

        <div class="values-grid">
            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-leaf"></i>
                </div>
                <h3>Sustainability</h3>
                <p>
                    We use eco-friendly materials and carbon-neutral shipping
                    to minimize our environmental impact.
                </p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Quality</h3>
                <p>
                    Each frame is meticulously crafted to ensure durability,
                    comfort, and timeless style.
                </p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Community</h3>
                <p>
                    We partner with local artisans and support fair trade
                    practices worldwide.
                </p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-recycle"></i>
                </div>
                <h3>Circularity</h3>
                <p>
                    Our frames are designed to be repaired, recycled, and
                    given new life at the end of their journey.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Timeline Section -->
<section class="timeline-section">
    <div class="container">
        <div class="section-header">
            <span class="label">OUR JOURNEY</span>
            <h2>The Eyelix Story</h2>
        </div>

        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-date">2020</div>
                <div class="timeline-content">
                    <h3>The Beginning</h3>
                    <p>
                        Eyelix Eyewear was founded with a vision to create sustainable,
                        stylish eyewear for conscious consumers.
                    </p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-date">2021</div>
                <div class="timeline-content">
                    <h3>First Collection Launch</h3>
                    <p>
                        We launched our debut collection featuring 12 eco-friendly frames
                        made from recycled materials.
                    </p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-date">2022</div>
                <div class="timeline-content">
                    <h3>Carbon Negative Achievement</h3>
                    <p>
                        Became one of Vietnam's first carbon-negative eyewear brands
                        through our offset programs.
                    </p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-date">2023</div>
                <div class="timeline-content">
                    <h3>Global Expansion</h3>
                    <p>
                        Expanded to international markets while maintaining our
                        commitment to sustainability.
                    </p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-date">2024</div>
                <div class="timeline-content">
                    <h3>Innovation in Materials</h3>
                    <p>
                        Introduced our groundbreaking recycled aluminum collection,
                        setting new standards in eco-design.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Impact Section -->
<section class="impact-section">
    <div class="container">
        <div class="section-header">
            <span class="label">OUR IMPACT</span>
            <h2>Making a Difference</h2>
        </div>

        <div class="impact-stats">
            <div class="stat-card">
                <div class="stat-number">10,000+</div>
                <div class="stat-label">Trees Planted</div>
            </div>

            <div class="stat-card">
                <div class="stat-number">50 Tons</div>
                <div class="stat-label">Plastic Recycled</div>
            </div>

            <div class="stat-card">
                <div class="stat-number">100%</div>
                <div class="stat-label">Carbon Neutral</div>
            </div>

            <div class="stat-card">
                <div class="stat-number">25,000+</div>
                <div class="stat-label">Happy Customers</div>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Join Us on Our Journey</h2>
            <p>Discover our collection of sustainable eyewear and be part of the change.</p>
            <div class="cta-buttons">
                <a asp-controller="Product" asp-action="Index" class="btn-primary">
                    Shop Collection
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn-secondary">
                    Get in Touch
                </a>
            </div>
        </div>
    </div>
</section>