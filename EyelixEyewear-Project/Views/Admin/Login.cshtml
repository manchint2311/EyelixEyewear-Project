@{
    ViewBag.Title = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - Eyelix</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .login-container {
            background: white;
            padding: 50px 40px;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 420px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .login-header h1 {
                font-size: 32px;
                color: #333;
                margin-bottom: 10px;
                font-weight: 700;
            }

            .login-header p {
                color: #777;
                font-size: 15px;
            }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
            font-size: 14px;
        }

        input {
            width: 100%;
            padding: 14px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
        }

            input:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        button {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
            transition: all 0.3s ease;
        }

            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            }

            button:active {
                transform: translateY(0);
            }

        .message {
            padding: 12px;
            margin-top: 20px;
            border-radius: 8px;
            display: none;
            font-size: 14px;
            text-align: center;
        }

            .message.success {
                background: #d4edda;
                color: #155724;
                border: 1px solid #c3e6cb;
            }

            .message.error {
                background: #f8d7da;
                color: #721c24;
                border: 1px solid #f5c6cb;
            }

        .demo-info {
            text-align: center;
            margin-top: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            border: 2px dashed #dee2e6;
        }

            .demo-info strong {
                display: block;
                margin-bottom: 10px;
                color: #333;
                font-size: 15px;
            }

            .demo-info code {
                background: #e9ecef;
                padding: 4px 8px;
                border-radius: 4px;
                color: #495057;
                font-family: 'Courier New', monospace;
                font-size: 14px;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #667eea;
                text-decoration: none;
                font-size: 14px;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h1>🔐 Admin Login</h1>
            <p>Access to Eyelix Admin Panel</p>
        </div>

        <form id="loginForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>

            <button type="submit">Login to Dashboard</button>
        </form>

        <div id="message" class="message"></div>

        <div class="demo-info">
            <strong>📝 Demo Credentials:</strong>
            Username: <code>admin</code><br>
            Password: <code>admin123</code>
        </div>

        <div class="back-link">
            <a href="@Url.Action("Index", "Home")">← Back to Website</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $('#loginForm').submit(function(e) {
            e.preventDefault();

            const username = $('#username').val();
            const password = $('#password').val();
            const btn = $(this).find('button');
            const originalText = btn.text();

            // Disable button
            btn.prop('disabled', true).text('Logging in...');

            $.ajax({
                url: '/Admin/Login',
                type: 'POST',
                data: { username: username, password: password },
                success: function(response) {
                    const msg = $('#message');

                    if (response.success) {
                        msg.removeClass('error').addClass('success');
                        msg.text('✓ ' + response.message + ' Redirecting...').show();

                        setTimeout(function() {
                            window.location.href = '/Admin/Orders';
                        }, 1000);
                    } else {
                        msg.removeClass('success').addClass('error');
                        msg.text('✗ ' + response.message).show();
                        btn.prop('disabled', false).text(originalText);
                    }
                },
                error: function() {
                    const msg = $('#message');
                    msg.removeClass('success').addClass('error');
                    msg.text('✗ Connection error. Please try again.').show();
                    btn.prop('disabled', false).text(originalText);
                }
            });
        });
    </script>
</body>
</html>