@{
    ViewData["Title"] = "Forgot Password";
    Layout = null; // Không dùng layout mặc định
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eyelix Eyewear</title>
    <link rel="stylesheet" href="~/css/forgot-password.css">
    <link rel="icon" href="~/images/logo/favicon.png" sizes="32x32">
</head>
<body>
    <!-- Header -->
    <header class="login-header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/images/logo/eyelix-logo.png" alt="Eyelix Eyewear">
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="forgot-main">
        <div class="forgot-container">
            <div class="forgot-content">
                <!-- Forgot Password Box -->
                <div class="forgot-box">
                    <!-- Lock Icon -->
                    <div class="lock-icon">
                        <svg viewBox="0 0 96 96" fill="none" stroke="currentColor" stroke-width="3">
                            <circle cx="48" cy="48" r="42" />
                            <rect x="28" y="44" width="40" height="28" rx="2" />
                            <path d="M32 44V32a16 16 0 0132 0v12" />
                            <circle cx="48" cy="58" r="3" fill="currentColor" />
                        </svg>
                    </div>

                    <h1 class="forgot-title">Trouble logging in?</h1>
                    <p class="forgot-description">
                        Enter your email and we'll send you a temporary password to get back into your account.
                    </p>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="form-message error">
                            @Html.ValidationSummary(false, "", new { @class = "" })
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post" class="forgot-form">
                        <div class="form-group">
                            <input type="email"
                                   name="email"
                                   class="form-input"
                                   placeholder="Email"
                                   required
                                   autocomplete="email">
                        </div>

                        <button type="submit" class="btn-send">
                            <span class="btn-text">Send Temporary Password</span>
                            <span class="btn-loader"></span>
                        </button>

                        <div class="form-divider">
                            <span>OR</span>
                        </div>

                        <a asp-action="Signup" class="link-create">Create new account</a>
                    </form>
                </div>

                <!-- Back to Login -->
                <div class="back-box">
                    <a asp-action="Login" class="back-link">Back to login</a>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="login-footer">
        <div class="footer-container">
            <nav class="footer-nav">
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Terms">Terms</a>
                <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
            <div class="footer-info">
                <p class="copyright">© 2025 Eyelix Eyewear</p>
            </div>
        </div>
    </footer>
</body>
</html>