@model EyelixEyewear_Project.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
}

<main class="login-main">
    <div class="login-container">
        <div class="login-showcase">
            <div class="showcase-wrapper">
                <img src="~/images/banner/jaehyun.jpg" alt="Showcase" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
        </div>

        <div class="login-content">
            <div class="login-box">
                <div class="login-logo">
                    <img src="~/images/logo/eyelix-logo.png" alt="Eyelix" class="logo-image">
                </div>

                <form asp-action="Login" method="post" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 10px;"></div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" style="color: green; margin-bottom: 10px;">@TempData["SuccessMessage"]</div>
                    }

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-input" placeholder="Enter username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div class="password-input-wrapper">
                            <input asp-for="Password" class="form-input" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-login">Log In</button>

                    <div class="login-options">
                        <label class="remember-me">
                            <input asp-for="RememberMe" type="checkbox"> Remember me
                        </label>
                        <div style="text-align: right; margin-bottom: 15px;">
                            <a asp-action="ForgotPassword" style="font-size: 13px; color: #0095f6; text-decoration: none; font-weight: 500;">
                                Forgot password?
                            </a>
                        </div>
                    </div>
                </form>

                <div class="signup-link">
                    Don't have an account? <a asp-action="Signup">Sign up</a>
                </div>
            </div>
        </div>
    </div>
</main>