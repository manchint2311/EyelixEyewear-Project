@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eyelix Eyewear</title>
    <link rel="stylesheet" href="~/css/forgot-password.css">
    <link rel="icon" href="~/images/logo/favicon.png" sizes="32x32">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .success-box {
            padding: 50px 40px;
        }

        .success-icon-wrapper {
            text-align: center;
            margin-bottom: 20px;
        }

            .success-icon-wrapper svg {
                width: 80px;
                height: 80px;
                stroke: #00a653;
                stroke-width: 2;
            }

        .success-title {
            font-size: 18px;
            font-weight: 600;
            color: #262626;
            margin-bottom: 12px;
            text-align: center;
        }

        .success-description {
            font-size: 14px;
            color: #8e8e8e;
            margin-bottom: 20px;
            text-align: center;
        }

        .temp-password-box {
            background: #f0f8ff;
            border: 2px solid #0095f6;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
        }

        .temp-password-label {
            font-size: 12px;
            color: #8e8e8e;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
        }

        .temp-password-value {
            font-size: 28px;
            font-weight: 700;
            color: #0095f6;
            font-family: 'Courier New', monospace;
            letter-spacing: 3px;
            margin-bottom: 15px;
            user-select: all;
            background: white;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #dbdbdb;
        }

        .btn-copy {
            background: #00a653;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-copy:hover {
                background: #008744;
            }

            .btn-copy svg {
                width: 16px;
                height: 16px;
            }

        .warning-box {
            background: #fffbf0;
            border: 1px solid #ffeaa7;
            border-radius: 6px;
            padding: 14px;
            margin: 20px 0;
            display: flex;
            gap: 10px;
            align-items: flex-start;
        }

            .warning-box svg {
                width: 18px;
                height: 18px;
                stroke: #f39c12;
                flex-shrink: 0;
                margin-top: 2px;
            }

        .warning-box-content {
            flex: 1;
            font-size: 13px;
            color: #856404;
            line-height: 1.6;
        }

            .warning-box-content strong {
                color: #000;
            }

        .instructions {
            background: #fafafa;
            padding: 16px;
            border-radius: 6px;
            margin: 20px 0;
            border: 1px solid #dbdbdb;
        }

            .instructions h3 {
                font-size: 14px;
                font-weight: 600;
                color: #262626;
                margin-bottom: 10px;
            }

            .instructions ol {
                margin: 0;
                padding-left: 20px;
            }

            .instructions li {
                font-size: 13px;
                color: #555;
                line-height: 1.7;
                margin-bottom: 6px;
            }

            .instructions strong {
                color: #0095f6;
                font-weight: 600;
            }

        .btn-login {
            width: 100%;
            padding: 10px;
            background: #0095f6;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            margin-top: 10px;
        }

            .btn-login:hover {
                background: #1877f2;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="login-header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/images/logo/eyelix-logo.png" alt="Eyelix Eyewear">
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="forgot-main">
        <div class="forgot-container" style="max-width: 500px;">
            <div class="forgot-content">
                <div class="forgot-box success-box">
                    <div class="success-icon-wrapper">
                        <svg viewBox="0 0 24 24" fill="none">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </div>

                    <h1 class="success-title">Password Reset Successful!</h1>
                    <p class="success-description">
                        Your temporary password has been generated successfully.
                    </p>

                    <div class="temp-password-box">
                        <div class="temp-password-label">Your Temporary Password</div>
                        <div class="temp-password-value" id="tempPassword">@ViewBag.TempPassword</div>
                        <button onclick="copyPassword()" class="btn-copy">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                            </svg>
                            Copy to Clipboard
                        </button>
                    </div>

                    <div class="warning-box">
                        <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                            <line x1="12" y1="9" x2="12" y2="13"></line>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                        <div class="warning-box-content">
                            <strong>Important:</strong> Please save this password and change it immediately after logging in for security purposes.
                        </div>
                    </div>

                    <div class="instructions">
                        <h3>📋 Next Steps:</h3>
                        <ol>
                            <li>Copy the temporary password above</li>
                            <li>Click "Go to Login" button below</li>
                            <li>Log in with email: <strong>@ViewBag.UserEmail</strong></li>
                            <li>Go to Account Settings and change your password</li>
                        </ol>
                    </div>

                    <a asp-action="Login" class="btn-login">Go to Login</a>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="login-footer">
        <div class="footer-container">
            <nav class="footer-nav">
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Terms">Terms</a>
                <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
            <div class="footer-info">
                <p class="copyright">© 2025 Eyelix Eyewear</p>
            </div>
        </div>
    </footer>

    <script>
        function copyPassword() {
            const password = document.getElementById('tempPassword').innerText;

            navigator.clipboard.writeText(password).then(function() {
                Swal.fire({
                    icon: 'success',
                    title: 'Copied!',
                    text: 'Password copied to clipboard',
                    showConfirmButton: false,
                    timer: 1500,
                    toast: true,
                    position: 'top-end'
                });
            }).catch(function(err) {
                // Fallback
                const textArea = document.createElement('textarea');
                textArea.value = password;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);

                alert('Password copied!');
            });
        }
    </script>
</body>
</html>