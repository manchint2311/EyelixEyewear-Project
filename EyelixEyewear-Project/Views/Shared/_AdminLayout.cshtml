<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eyelix Admin</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="~/css/admin/style.css" asp-append-version="true">

    <link rel="icon" href="~/images/logo/favicon.png" sizes="32x32">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="brand">
            <h2>EYE<span>LIX</span></h2>
        </div>
        <ul class="side-menu">
            <li>
                <a href="@Url.Action("Index", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="@Url.Action("Products", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Products" ? "active" : "")">
                    <i class="fas fa-glasses"></i> Products
                </a>
            </li>
            <li>
                <a href="@Url.Action("Orders", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Orders" ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i> Orders
                </a>
            </li>
            <li>
                <a href="@Url.Action("Customers", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Customers" ? "active" : "")">
                    <i class="fas fa-users"></i> Customers
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-sign-out-alt"></i> Back to Site
                </a>
            </li>
        </ul>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>