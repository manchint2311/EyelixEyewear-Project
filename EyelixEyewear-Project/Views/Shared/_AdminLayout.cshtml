<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Eyelix Admin</title>

    <link rel="stylesheet" href="~/css/admin/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="~/images/logo/favicon.png" sizes="32x32">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">
            <h2>EYE<span>LIX</span></h2>
        </div>
        <ul class="side-menu">
            <li>
                <a asp-controller="Admin" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Products"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")">
                    <i class="fas fa-glasses"></i> Products
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Orders"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Orders" ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i> Orders
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Customers"
                   class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Customers" ? "active" : "")">
                    <i class="fas fa-users"></i> Customers
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-sign-out-alt"></i> Back to Site
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/admin/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 2000,
                toast: true,
                position: 'top-end'
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: '@TempData["ErrorMessage"]',
                confirmButtonColor: '#e00d0d'
            });
        </script>
    }
</body>
</html>