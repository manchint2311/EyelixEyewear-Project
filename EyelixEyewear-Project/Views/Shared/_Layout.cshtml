@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eyelix Eyewear</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Prosto+One&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Favicon -->
    <link rel="icon" href="~/images/logo/favicon.png" sizes="32x32">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="@(User.Identity.IsAuthenticated ? "authenticated" : "")">
    <!-- Header -->
    @await Html.PartialAsync("_Header")

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- Scripts -->
    <<!-- Scripts -->
    <!-- jQuery from CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>

    <!-- Fallback to local if CDN fails -->
    <script>
        if (typeof jQuery == 'undefined') {
            document.write('<script src="~/lib/jquery/jquery.min.js"><\/script>');
        }
    </script>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/products.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: '@TempData["SuccessMessage"]',
                    showConfirmButton: false,
                    timer: 1500,
                    toast: true // Kiểu thông báo nhỏ góc màn hình
                });
            });

            function addToCartAjax(productId) {
                // Gửi request ngầm
                fetch('/Order/AddToCartAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `productId=${productId}&quantity=1`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Hiện thông báo đẹp (SweetAlert2)
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: data.message,
                            showConfirmButton: false,
                            timer: 1500,
                            toast: true,
                            position: 'top-end'
                        });

                        // (Optional) Nếu bạn có icon giỏ hàng hiển thị số, hãy cập nhật ở đây
                        // document.getElementById('cart-badge').innerText = data.totalItems;
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Có lỗi xảy ra khi kết nối server', 'error');
                });
            }
        </script>
    }
</body>
</html>